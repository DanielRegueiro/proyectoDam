package com.proyecto;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.boot.web.servlet.support.SpringBootServletInitializer;
import javafx.fxml.FXMLLoader;
import javafx.stage.Stage;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;

@SpringBootApplication(scanBasePackages = {"com.proyecto"})
public class Application  extends Application {

	/**
	 * Instancia para generar trazas de log
	 */
	private static final Logger log = LoggerFactory.getLogger(Application.class);

	/**
	 * Proporciona información para configurar correctamente la aplicación
	 * 
	 * @param application
	 *            Instancia de {@link SpringApplicationBuilder} a la que se le
	 *            asociará la configuración
	 */
	@Override
	protected SpringApplicationBuilder configure(SpringApplicationBuilder application) {
		return application.sources(Application.class);
	}

	public static void main(String[] args) {

		log.info("Arrancando la Aplicación  ...");

		SpringApplication.run(Application.class, args);

		log.info("La Aplicación se ha iniciado correctamente.");

	}
	
	public void start(Stage primaryStage) throws Exception {
	
		Parent root=FXMLLoader.load(getClass().getResource("/view/login.fxml"));
		Scene scene = new Scene(root);
		
		primaryStage.setScene(scene);
		primaryStage.setResizable(false);
		
		primaryStage.show();
		
		
		
		
		
	}
}