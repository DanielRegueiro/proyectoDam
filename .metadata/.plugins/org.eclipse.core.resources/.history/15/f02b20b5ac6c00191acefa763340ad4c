package com.example.service.impl;
import org.springframework.stereotype.Service;

import com.example.modelo.Unidad;
import com.example.repository.TropaRepository;
import com.example.service.TropasService;



@Service
public class TropasServiceImpl implements TropasService {
	
	
	final TropaRepository repository;
	

	public TropasServiceImpl(TropaRepository repository) {
		this.repository = repository;
	}
		
	
	@Override
	public Iterable<Unidad> listarUnidades() {
		
		final Iterable<Unidad> unidades;
		
		unidades = repository.findAll();
		
		for (Unidad unidad : unidades) {
			System.out.println(unidad.getNombre());

		}
			
		return unidades;
	}
	public void pruebaServicio() {
		
		System.out.println("aui no casca");
	}
}
