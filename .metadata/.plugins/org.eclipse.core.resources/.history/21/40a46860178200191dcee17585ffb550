package controller;

import java.io.IOException;
import java.net.URL;
import java.util.ResourceBundle;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.control.ListCell;
import javafx.scene.image.ImageView;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.text.Text;

public class ControllerCustomCellUnidad extends ListCell<modeloVista.Unidad> {

	@FXML
	private ResourceBundle resources;

	@FXML
	private URL location;

	@FXML
	private ImageView imagen;

	@FXML
	private Text nombreUnidad;

	@FXML
	private AnchorPane panel;

	@FXML
	private GridPane panelDatos;

	@FXML
	private Text textMovimiento;

	@FXML
	private Text textHabilidadAtaque;

	@FXML
	private Text textHabilidadProyectiles;

	@FXML
	private Text textFuerza;

	@FXML
	private Text textResistencia;

	@FXML
	private Text textHeridas;

	@FXML
	private Text textAtaques;

	@FXML
	private Text textLiderazgo;

	@FXML
	private Text textSalvacion;

	@FXML
	private Text puntos;

	private FXMLLoader mLLoader;



	@Override
	protected void updateItem(modeloVista.Unidad item, boolean empty) {
		super.updateItem(item, empty);
		if (item != null && !empty) {

			if (mLLoader == null) {
				mLLoader = new FXMLLoader(getClass().getResource("/Vistas/CustomCellUnidades.fxml"));
				mLLoader.setController(this);
				mLLoader.setRoot(panel);

				
				try {

					mLLoader.load();

				} catch (IOException e) {
					e.printStackTrace();
				}
			}
			
			
			
			imagen = new ImageView(item.getImagen());
			nombreUnidad = new Text(item.getNombre());

			System.out.println(nombreUnidad.getText());

			textMovimiento = new Text(String.valueOf(item.getMovimiento()));
			textHabilidadAtaque = new Text(String.valueOf(item.getHabilidad_ataque()));
			textHabilidadProyectiles = new Text(String.valueOf(item.getHabilidad_proyectiles()));
			textFuerza = new Text(String.valueOf(item.getFuerza()));
			textResistencia = new Text(String.valueOf(item.getResistencia()));
			textHeridas = new Text(String.valueOf(item.getHeridas()));
			textAtaques = new Text(String.valueOf(item.getAtaques()));
			textLiderazgo = new Text(String.valueOf(item.getLiderazgo()));
			textSalvacion = new Text(String.valueOf(item.getSalvacion()));
			puntos = new Text(String.valueOf(item.getPuntos()));
			setText(null);

			
			setGraphic(textLiderazgo);

		} else {
			setText(null);
			setGraphic(null);
		}
	}
	  @FXML
	    void initialize() {
	        assert panel != null : "fx:id=\"panel\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert imagen != null : "fx:id=\"imagen\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert nombreUnidad != null : "fx:id=\"nombreUnidad\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert panelDatos != null : "fx:id=\"panelDatos\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textMovimiento != null : "fx:id=\"textMovimiento\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textHabilidadAtaque != null : "fx:id=\"textHabilidadAtaque\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textHabilidadProyectiles != null : "fx:id=\"textHabilidadProyectiles\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textFuerza != null : "fx:id=\"textFuerza\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textResistencia != null : "fx:id=\"textResistencia\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textHeridas != null : "fx:id=\"textHeridas\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textAtaques != null : "fx:id=\"textAtaques\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textLiderazgo != null : "fx:id=\"textLiderazgo\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert textSalvacion != null : "fx:id=\"textSalvacion\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";
	        assert puntos != null : "fx:id=\"puntos\" was not injected: check your FXML file 'CustomCellUnidades.fxml'.";

	    }
}
